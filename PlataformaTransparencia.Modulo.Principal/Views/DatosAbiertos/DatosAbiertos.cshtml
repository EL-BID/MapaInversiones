<!--DATOS PLANEACION-->
<section class="section main-Content">
    <div class="container">
        <div class="row justify-content-center">
            @{
                var datosplanificacion = await Orchard.GetContentItemByHandleAsync("alias:DatosAbiertosPlanificacion");
            }
            <div class="section-heading heading-left">
                <h2>@datosplanificacion.Content.DatosAbiertos.Titulo.Text</h2>
                <p>@Html.Raw(datosplanificacion.Content.HtmlBodyPart.Html)</p>
            </div>
        </div>
        <div class="row justify-content-center items">
            @foreach (var caja in datosplanificacion.Content.BagPart.ContentItems)
            {
                <div class="col-xl-6 col-md-6 col-12 item">
                    <!-- Begin OpenData item -->
                    <div class="services-item services-item-row item-style">
                        <div class="services-item-info">
                            <h4 class="services-item-heading">@caja.TitlePart.Title</h4>
                            <div class="small">@Html.Raw(caja.HtmlBodyPart.Html)</div>
                            <div class="actions-links">
                                <a onclick="ga('send','event','Download','XLSX', this.href]);" target="_blank" href="@caja.DescargaDatosAbiertos.UrlBotonDiccionario.Url">
                                    <span class="badge badge-pill badge-primary"> @caja.DescargaDatosAbiertos.UrlBotonDiccionario.Text</span>
                                </a>
                                <a onclick="ga('send','event','Download','CSV', this.href]);" target="_blank" href="@caja.DescargaDatosAbiertos.UrlBotonCVS.Url">
                                    <span class="badge badge-pill badge-primary"> @caja.DescargaDatosAbiertos.UrlBotonCVS.Text</span>
                                </a>
                            </div>
                        </div>
                        <div class="services-item-ico">
                            <i class="material-icons material-icons-outlined md-48">cloud_download</i>
                        </div>
                    </div>
                    
                    <!-- End open data item -->
                </div>
            }

        </div>
    </div>
</section>


