
@{
    ViewBag.Title = "Mapa de Inversiones - Azure Maps";
    Layout = "~/Views/Shared/_AzureLayout.cshtml";
}

    <meta charset="utf-8" />
    <title>@ViewData["Title"]</title>
    <meta name="viewport" content="width=device-width, initial-scale=1" />

    <!-- Azure Maps Web SDK -->
    <link rel="stylesheet" href="https://atlas.microsoft.com/sdk/javascript/mapcontrol/3/atlas.min.css" />
    <script src="https://atlas.microsoft.com/sdk/javascript/mapcontrol/3/atlas.min.js"></script>

    <!-- RequireJS -->
    <script src="https://cdnjs.cloudflare.com/ajax/libs/require.js/2.3.6/require.min.js"></script>

    <style>
        html, body {
            height: 100%;
            margin: 0;
        }

        #map-div {
            width: 100%;
            height: 100%;
        }
    </style>

    <script>
    require.config({
        baseUrl: '/',
        paths: {
            'lib/mvc/Observable': 'content/dist/js/lib/mvc/Observable',
            'jquery': 'https://code.jquery.com/jquery-3.7.1.min',
            'doT': 'https://cdnjs.cloudflare.com/ajax/libs/dot/1.1.3/doT.min',
            'app/utils/Modal': 'content/dist/js/app/utils/Modal',
            'app/network/urlsMap': 'content/dist/js/app/network/urlsMap',
            'app/storage/Storage': 'content/dist/js/app/storage/Storage',
            'app': 'content/dist/js/app',
            'lib': 'content/dist/js/lib'
        },
        shim: {
            'app/utils/Modal': { deps: ['doT'] }
        }
    });
    </script>
@*     <div id="map-div"></div> *@

<style>
    /* Estilo general del popup */


        .azure-popup-container ul {
            margin: 8px 0;
            padding-left: 16px;
        }

        .azure-popup-container a {
            color: #007ACC;
            text-decoration: none;
        }

            .azure-popup-container a:hover {
                text-decoration: underline;
            }
</style>
@model PlataformaTransparencia.Modelos.ModelHomeData
<div class="wrap-map2 mob-wrapper" id="section-home">

    <!-- homepage Section -->
    <div id="intro" class="homepage">

        <!-- Begin bread crumbs -->
        <!--MAIN BANNER-->
        <section class="banner-main">
            <div class="container">
                <!-- Begin bread crumbs -->
                <nav class="bread-crumbs">
                    <div class="container">
                        <div class="row">
                            <div class="col-12">
                                <ul class="bread-crumbs-list">
                                    <li>
                                        <a href="\">Inicio</a>
                                        <i class="material-icons md-18">chevron_right</i>
                                    </li>
                                    <li><a href="#!">Inversión Pública</a><i class="material-icons md-18">chevron_right</i></li>
                                    <li>Mapa de proyectos</li>
                                </ul>
                            </div>
                        </div>
                    </div>
                </nav><!-- End bread crumbs -->


                <div class="row justify-content-center">

                    <div class="col-lg-8">
                        <div class="banner-main-info">
                            <div class="banner-main-title mb-0">
                                <h1>Mapa de proyectos</h1>
                            </div>
                            <div class="banner-main-desc">

                                <p>En este mapa podés identificar los proyectos activos en el Distrito por ubicación (comuna o corregimiento). <br /><span class="text-bold">¡Usálo para hacer tu búsqueda más sencilla!</span></p>
