        <div class="sect-tab preguntas" id="preguntas" style="@displaypreguntas">
            <div class="row">
                @{ var preguntas = await Orchard.GetContentItemByHandleAsync("alias:Preguntas");
                                List<string> categorias = new List<string>(); }
                <!--LEFT COLUMN-->
