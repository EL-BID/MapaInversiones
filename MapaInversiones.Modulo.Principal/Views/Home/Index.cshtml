<style>
    .capitalEntidad {
    text-transform: capitalize;
    }

    .autocomplete-suggestions {
    border: 1px solid #999;
    background: #FFF;
    overflow: auto;
    }

    .autocomplete-suggestion {
    padding: 2px 5px;
    white-space: nowrap;
    overflow: hidden;
    }

    .autocomplete-selected {
    background: #F0F0F0;
    }

    .autocomplete-suggestions strong {
    font-weight: normal;
    color: #3399FF;
    }

    .autocomplete-group {
    padding: 2px 5px;
    }

    .autocomplete-group strong {
    display: block;
    border-bottom: 1px solid #000;
    }

    .graficoInteractivo path:hover {
        fill: #5916c3;
        stroke: #5916c3;
        stroke-width: 3px;
        transition: fill 0.4s;
        color: #fff;
    }

    /* Estilos específicos para la gráfica */
    .bubble-chart-container {
    width: 100%;
    height: auto;
    position: relative;
    }

    .bubble-chart-svg {
    width: 100%;
    height: auto;
    }

    .bubble-chart-bubble {
    stroke: #fff;
    stroke-width: 1px;
    stroke-linejoin: round;
    transition: transform 0.2s ease, stroke-width 0.2s ease, stroke 0.2s ease;
    }

    .bubble-chart-text {
    font-family: inherit;
    fill: #fff;
    font-weight: bold;
    pointer-events: none;
    text-anchor: middle;
    }

    .bubble-chart-tooltip {
    position: absolute;
    text-align: center;
    padding: 10px;
    font-family: inherit;
    font-size: clamp(10px, 1vw, 12px);
    background: #dcdcdc;
    color: #000;
    border-radius: 10px;
    pointer-events: none;
    visibility: hidden;
    box-shadow: 0px 6px 20px rgba(0, 0, 0, 0.25);
    z-index: 10;
    min-width: 100px;
    max-width: 200px;
    word-wrap: break-word;
    }

    svg .segmento-dona {
        pointer-events: none;
        cursor: default !important;
    }

    #graphDonaComprometido,
    #graphDonaGiros,
    #graphDonaComprometido svg,
    #graphDonaGiros svg {
        cursor: default !important;
    }

    .header-search{display:none}
    
    
    
</style>


