    var flag_vigencia_actual = Model?.InfoVigenciaActual != null;
    var vigente_actual = @Html.FormatoMoneda(Model?.InfoVigenciaActual?.Presupuesto != null ? Model.InfoVigenciaActual.Presupuesto : 0);
    var val_giros = @Html.FormatoMoneda(Model?.InfoVigenciaActual?.valorGiros != null ? Model.InfoVigenciaActual.valorGiros : 0);
