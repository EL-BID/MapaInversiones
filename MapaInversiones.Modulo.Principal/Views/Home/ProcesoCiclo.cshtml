                    <div class="col-lg-4">
                        <div class="card blue-card text-center shadow h-100">
                            <div class="img-container">
                                <img src="img/ic-d1.svg" alt="icono decorativo" />
                            </div>
                            <span class="h6">Alternativas de gastos</span>
                        </div>
                    </div>
                    <div class="col-lg-4">
                        <div class="card blue-card text-center shadow">
                            <div class="img-container">
                                <img src="img/ic-d2.svg" alt="icono decorativo" />
                            </div>
                            <span class="h6">Satisfacción de necesidades</span>
                        </div>
                    </div>
                    <div class="col-lg-4">
                        <div class="card blue-card text-center shadow h-100">
                            <div class="img-container">
                                <img src="img/ic-d3.svg" alt="icono decorativo" />
                            </div>
                            <span class="h6">Disponibilidad de recursos</span>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>

<!--CICLO PRESUPUESTARIO-->
<!--2.el ciclo presupuestario-->
<section class="section-bg2 budget-cycle">
    <div class="container">
        <div class="row justify-content-center">
            <div class="section-heading text-center py-5">
                <h2>El ciclo presupuestario</h2>
            </div>
        </div>
        <div class="row justify-content-center">
            <div class="col-lg-8">
                <div class="graph-arrows">
                    <div class="circle-stage pos1">
                        <div class="img-container"><img src="img/ic-stage1.svg" alt="icono decorativo relacionado a Fase 1 del presupuesto" /></div>
                        <h3>Programación y formulación</h3>
                        <button type="button" class="btn btn-info btn-lg" data-toggle="modal" data-target="#myModal"><span>+</span></button>
                    </div>
                    <div class="circle-stage pos2">
                        <div class="img-container"><img src="img/ic-stage2.svg" alt="icono decorativo relacionado a Fase 2 del presupuesto" /></div>
                        <h3>Discusión <br />y Aprobación</h3>
                        <button type="button" class="btn btn-info btn-lg" data-toggle="modal" data-target="#myModal2"><span>+</span></button>

                    </div>
                    <div class="circle-stage pos3">
                        <div class="img-container"><img src="img/ic-stage3.svg" alt="icono decorativo relacionado a Fase 3 del presupuesto" /></div>
                        <h3>Ejecución</h3>
                        <button type="button" class="btn btn-info btn-lg" data-toggle="modal" data-target="#myModal3"><span>+</span></button>

                    </div>
                    <div class="circle-stage pos4">
                        <div class="img-container"><img src="img/ic-stage4.svg" alt="icono decorativo relacionado a Fase 4 del presupuesto" /></div>
                        <h3>Seguimiento y Evaluación</h3>
                        <button type="button" class="btn btn-info btn-lg" data-toggle="modal" data-target="#myModal4"><span>+</span></button>

                    </div>
                    <div class="circle-stage pos5">
                        <div class="img-container"><img src="img/ic-stage5.svg" alt="icono decorativo relacionado a Fase 5 del presupuesto" /></div>
                        <h3>Cierre y Liquidación</h3>
                        <button type="button" class="btn btn-info btn-lg" data-toggle="modal" data-target="#myModal5"><span>+</span></button>

                    </div>
                </div>


            </div>
        </div>
    </div>
</section>

